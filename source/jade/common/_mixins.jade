// Skills Pie Charts
mixin pie_chart(skill)
	.group_item
		span.item_name=skill
		svg.g-circles(width="125" height="125")
			circle(r="50" cx="65" cy="65" stroke="#ccc" fill="none")
			circle.sector(r="50" cx="65" cy="65" stroke="#10C1A8" transform="rotate(-90 65 65)")



// Header top: socials and menu button
mixin header_top
