		.nav_social
			ul.nav_list
				- var socials_header = {"img/svg-sprite.svg#vk" : "https://vk.com/kokabum", "img/svg-sprite.svg#github" : "https://github.com/kokabum", "img/svg-sprite.svg#in" : "#"}
