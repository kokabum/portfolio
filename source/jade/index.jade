doctype html
html
	include common/_head
	body.animate
		.wrapper
			header.header_welcome
				a(href="#" class="auth") Авторизоваться
			.main
				.welcome
					.flip-card
						.flip-card_front
							.user_img
								img(src="img/foto.jpg" class="user_foto")
							h1.user_name Денис Детко
							.user_desc Личный сайт веб разработчика
							.user_social
								ul.social_list
									li.social_item
										a.social_link(href="https://vk.com/kokabum")
											svg.icon.icon_vk(width="25" heith="25")
												use(xlink:href="img/svg-sprite.svg#vk")
									li.social_item
										a.social_link(href="https://github.com/kokabum")
											svg.icon.icon_git(width="25" heith="25")
												use(xlink:href="img/svg-sprite.svg#github")
									li.social_item
										a.social_link(href="#")
											svg.icon.icon_in(width="25" heith="25")
												use(xlink:href="img/svg-sprite.svg#in")
							ul.menu_list
								- var pages = {"Мои работы" : "works.html", "Обо мне" : "about.html", "Блог" : "blog.html"}
								each p_url, p_name in pages
									li.list_item
										a.item_link(href=p_url)= p_name
								
						.flip-card_back
			footer(class="footer_welcome")
				.footer_text
					span.copyright © Денис Детко
					span.copyright.copyright_slogan создано с любовью в LoftScool
					span.copyright 2016